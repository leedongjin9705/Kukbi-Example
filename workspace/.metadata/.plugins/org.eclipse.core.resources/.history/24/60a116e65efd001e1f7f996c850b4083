package chap08.sec05;

public interface RemoteControl {
	//상수 필드
	int MAX_VOLUME = 10;
	int MIN_VOLUME = 0;
	
	//추상 메소드 선언
	void turnOn();
	void turnOff();
	void setVolume(int volume);
	
	// 디폴트 인스턴스 메소드
	/*인터페이스에는 완전한 실행코드를 가진 default 메소드를 선언 가능
	 * default 메소드는 실행부가 있음
	 * default 키워드는 리턴 타입 앞에 붙음
	 */
	default void setMute(boolean nute) {
		
	}

	

}
