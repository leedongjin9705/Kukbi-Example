package chap09.sec05.exam02;

public class A {
	// A 인스턴스 필드 선언
	String field = "A-field";
	// A 인스턴스 메소드 선언
	void method() {
		System.out.println("A-method");
	}
	// 인스턴스 멤버 클래스
	class B{
		//B 인스턴스 필드 
		String field = "B-field";
		// B 인스턴스 메소드 선언
		void method() {
			System.out.println("B-method");
		}
		// B 인스턴스 메소드
		void print() {
			// B 객체의 필드와 메소드 사용
			System.out.println(this.field);
			// this : 해당 중첩 클래스의 객체를 의미함 
		}
	}

}
