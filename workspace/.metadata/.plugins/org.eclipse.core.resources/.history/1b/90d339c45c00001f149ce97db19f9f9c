package chap09.sec04.exam03;

public class A {
	// 메소드 선언
	public void method1(int arg) {
		int var = 1; // 로컬 변수 선언
		// 로컬 클래스 선언
		class B{
			// 메소드 선언
			void method2() {
				// 로컬 변수 읽기
				System.out.println(arg); // 가능
				System.out.println(var); // 가능
				// arg = 20; // 수정은 불가
				// var = 30; // 수정은 불가
				
			}
		}
		
	}

}
